# direnv .envrc - reads .phpversion and prepends the matching PHP to PATH
if [ -f .phpversion ]; then
  ver=$(cat .phpversion | tr -d '[:space:]')
  # If version has no dot (e.g. 80), insert one (-> 8.0)
  if ! echo "$ver" | grep -q '\.'; then
    ver="${ver%?}.${ver#${ver%?}}"
  fi
  php_bin="/usr/bin/php${ver}"
  if [ -x "$php_bin" ]; then
    export PHP="$php_bin"
    alias php="$php_bin"
  fi
fi