if [ -f .phpversion ]; then
  ver=$(cat .phpversion | tr -d '[:space:]')
  if ! echo "$ver" | grep -q '\.'; then
    ver="${ver%?}.${ver#${ver%?}}"
  fi
  php_bin="/usr/bin/php${ver}"
  if [ -x "$php_bin" ]; then
    mkdir -p .direnv/bin
    ln -sf "$php_bin" .direnv/bin/php
    PATH_add .direnv/bin
  fi
fi